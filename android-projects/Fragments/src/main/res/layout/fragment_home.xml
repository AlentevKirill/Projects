<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/homeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DefaultFragmentsCountText"
        android:textSize="@dimen/textFragmentsSize"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/homeOpenNextFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/OpenButtonText"
        android:textAllCaps="true"
        android:textSize="@dimen/textFragmentsSize"
        android:textColor="@color/black"
        android:background="@color/purple_200"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/homeText"
        app:layout_constraintEnd_toEndOf="@+id/homeText"
        app:layout_constraintTop_toBottomOf="@id/homeText"
        />

</androidx.constraintlayout.widget.ConstraintLayout>