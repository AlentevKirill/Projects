<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/outputField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/defaultButtonTextSize"
        android:gravity="center"
        android:textIsSelectable="true"
        android:background="@color/displayBackground"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--<androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCopy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Copy"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/outputField"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonDel"/>-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Del"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/outputField"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonEquality"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonEquality"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/equalityButtonColor"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/outputField"
        app:layout_constraintBottom_toTopOf="@+id/buttonAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonDel"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonDel"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button8"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonDel"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@+id/button9"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonDel"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@+id/buttonAdd"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAdd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonDel"
        app:layout_constraintBottom_toTopOf="@+id/buttonSub"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button5"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@+id/button6"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@+id/buttonSub"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdd"
        app:layout_constraintBottom_toTopOf="@+id/buttonMul"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintBottom_toTopOf="@+id/buttonPoint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintEnd_toStartOf="@+id/button3"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintBottom_toTopOf="@+id/buttonC"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/buttonMul"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMul"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="*"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSub"
        app:layout_constraintBottom_toTopOf="@+id/buttonDiv"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPoint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button0"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonPoint"
        app:layout_constraintEnd_toStartOf="@+id/buttonC"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="C"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintEnd_toStartOf="@+id/buttonDiv"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDiv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=":"
        android:textSize="@dimen/defaultButtonTextSize"
        android:textColor="@color/black"
        android:background="@color/buttonBackground"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonMul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonC"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>